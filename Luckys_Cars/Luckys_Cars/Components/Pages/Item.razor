@page "/Item"
@layout MainLayout
@rendermode InteractiveServer
@inject NavigationManager Navigation 

<PageTitle>Item Details</PageTitle>
<body style="background-color: #fff; height: 100vh; width: auto; color: #000000">

<div class="d-grid mt-4 w-100 mt-5 h-100">
    <div class="row vh-100">
        <!-- Left side: Car Image and Thumbnails -->
        <div class="col-md-6">
            <!-- Main Car Image -->
            <div class="text-center">
                <img src="@_mainImage" class="img-fluid rounded border" style="max-height: 400px;" alt="Car Image" />
                
            </div>

            <!-- Thumbnails -->
            <div class="d-flex justify-content-center gap-2 mt-3">
                <img src="images/RedMustang.jpg" class="img-fluid rounded border" style="width: 100px; height: auto; cursor:pointer;" @onclick="@(() => ChangeMainImage("images/RedMustang.jpg"))" alt="Thumbnail 1" />
                <img src="images/RedMustangFront.jpg" class="img-fluid rounded border" style="width: 100px; height: auto; cursor:pointer;" @onclick="@(() => ChangeMainImage("images/RedMustangFront.jpg"))" alt="Thumbnail 2" />
            </div>
        </div>

        <!-- Right side: Car Details -->
        <div class="col-md-6">
            <h2 class="fw-bold" style="color: #000000">2012 Ford Mustang GT Premium Coupe RWD</h2>
            <p><strong>Price:</strong> $18,256</p>
            <p><strong>Exterior:</strong> Red</p>
            <p><strong>Interior:</strong> Black</p>
            <p><strong>Wheel Train:</strong> Front Wheel Drive</p>
            <p><strong>Engine:</strong> 2.0L Turbo I4</p>
            <p><strong>Transmission:</strong> Automatic</p>
            <p><strong>Extra Features:</strong> Bluetooth Stereo, Built-in GPS</p>

            <button class="btn btn-success mt-4" style="padding: 0.75rem 2rem; font-size: 1.25rem;">
                Add To Cart
            </button>
        </div>
    </div>
</div>
    </body>
@code {
    private string _mainImage = "images/RedMustang.jpg";

    private void ChangeMainImage(string imagePath)
    {
        _mainImage = imagePath;
    }

    // database info (future)
}